# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build hiking`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t hiking`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system hiking && \
          adduser --system -G hiking hiking

COPY dist/apps/hiking hiking
RUN chown -R hiking:hiking .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix hiking --omit=dev -f install

CMD [ "node", "hiking" ]
